<%- include('./layout/Header') %>
    <%- include('./layout/Navbar') %>
       <!-- <%= data%> -->
        <div class="add-to-diary">
            <h1>Edit<span class="green-text">DIARY</span></h1>

            <form action="/diary/edit/<%= data.id%>?_method=PUT" method="post">

                <input type="hidden" name="_method"value="PUT">
                <div class="from-group">
                    <label for="title">Title</label>
                    <input type="text" class="from-control" id="title" name="title"
                    value ="<%= data.title%>">
                </div>
                <div class="from-group">
                    <label for="description">Description</label>
                    <br>
                    <textarea name="description" id="description" cols="30" 
                    rows="5"><%= data.description %>
                    </textarea>
                </div>
                <div class="from-group">
                    <label for="date">Date</label>
                    <input type="date" class="from-control" id="date" name="date">
                </div>
                <br>
                <input type="submit" value="Edit to Diary">
            </form>
        </div>
        <%- include('./layout/Footer') %>