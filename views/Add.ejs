<%- include('./layout/Header') %>
    <%- include('./layout/Navbar') %>
        <div class="add-to-diary">
            <h1>ADD<span class="green-text">DIARY</span></h1>

            <form action="/add-to-diary" method="post">
                <div class="from-group">
                    <label for="title">Title</label>
                    <input type="text" class="from-control" id="title" name="title">
                </div>
                <br>
                <div class="from-group">
                    <label for="description">Description</label>
                    <br>
                    <textarea name="description" id="description" cols="30" rows="5">
            </textarea>
                </div>
                <br>
                <div class="from-group">
                    <label for="date">Date</label>
                    <input type="date" class="from-control" id="date" name="date">
                </div>
                <br>
                <input type="submit" value="Add to Diary">
            </form>
        </div>
        <%- include('./layout/Footer') %>